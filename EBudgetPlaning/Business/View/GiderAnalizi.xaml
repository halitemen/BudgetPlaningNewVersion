<Window x:Class="EBudgetPlaning.Business.View.GiderAnalizi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EBudgetPlaning.Business.View"
        mc:Ignorable="d"
        Title="GiderAnalizi" Height="328.195" Width="283.935" WindowStartupLocation="CenterScreen">
    <Grid>

        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Bu ayın gider dağılımı aşağıdadır." VerticalAlignment="Top" Width="192"/>
        <ListView ItemsSource="{Binding KategoriList}" HorizontalAlignment="Left" Height="225" Margin="10,62,0,0" VerticalAlignment="Top" Width="256">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding KategoriAdi}" Header="KATEGORİ" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Degeri}" Header="MİKTARI" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
